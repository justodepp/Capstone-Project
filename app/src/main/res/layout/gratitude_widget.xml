<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/org_card_height"
    android:padding="@dimen/general_padding_4dp">

    <ImageView
        android:id="@+id/appwidget_image"
        android:layout_width="@dimen/org_card_height"
        android:layout_height="@dimen/org_card_height"
        android:contentDescription="widget image"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/appwidget_image"
        android:layout_toEndOf="@+id/appwidget_image"
        android:layout_marginStart="@dimen/general_margin_16dp"
        android:layout_marginEnd="@dimen/general_margin_16dp"
        android:layout_marginTop="@dimen/general_margin_16dp"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Sample Title"/>

</RelativeLayout>