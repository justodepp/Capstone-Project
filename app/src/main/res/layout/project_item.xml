<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable name="project"
            type="org.gratitude.data.model.projects.Project"/>
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/project_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_margin_8dp"
        android:layout_marginEnd="@dimen/general_margin_8dp"
        android:layout_marginTop="@dimen/general_margin_8dp"
        android:minHeight="@dimen/min_height"
        style="@style/CardView.Style" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/include_header"
                layout="@layout/project_item_header" />

            <include
                android:id="@+id/include_raised"
                layout="@layout/project_item_raised" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>